// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id   Int    @id @unique @default(autoincrement())
  user String @unique
  name String
  // role 1 - superadmin
  // role 2 - admin (default)
  role Int    @default(2)
  hash String
}

model Office {
  id       Int        @id @unique @default(autoincrement())
  name     String     @unique
  Employee Employee[]
}

model Unit {
  id       Int        @id @unique @default(autoincrement())
  name     String     @unique
  Employee Employee[]
}

model Position {
  id       Int        @id @unique @default(autoincrement())
  name     String     @unique
  Employee Employee[]
}

model InOutState {
  id       Int      @id @unique @default(autoincrement())
  in       DateTime @default(now())
  out      DateTime
  isOut    Boolean  @default(false)
  Employee Employee @relation(fields: employee, references: id)
  employee Int
}

model Employee {
  id         Int          @id @unique @default(autoincrement())
  name       String
  Office     Office?      @relation(fields: [office], references: [name])
  office     String?
  Unit       Unit?        @relation(fields: [unit], references: [name])
  unit       String?
  Position   Position?    @relation(fields: [position], references: [name])
  position   String?
  InOutState InOutState[]
}
