// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE2_URL")
}

model System {
  key   String @id @unique
  value String
  role  Int    @default(0)
}

model User {
  id       Int        @id @unique @default(autoincrement())
  user     String     @unique
  name     String
  role     Int        @default(2)
  hash     String
  Employee Employee[]
}

model Logs {
  id        Int      @id @unique @default(autoincrement())
  timestamp DateTime @default(now())
  employee  String
  data      String
}

model Employee {
  id      String @id @unique
  name    String
  data    String
  AddedBy User   @relation(fields: addedBy, references: id, onDelete: SetNull)
  addedBy Int
}
